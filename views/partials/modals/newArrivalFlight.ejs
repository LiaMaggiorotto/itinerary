<!-- arriving flight modal start -->

<div class="modal fade" id="createArrivingFlightModal" tabindex="-1" role="dialog" aria-labelledby="createArrivingFlightModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" id="arriving-flight-modal">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="createArrivingFlightModalLabel">Save A Flight</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        
        <div class="modal-body">
          <form method="POST" action="/tripdetail/<%= oneTrip._id %>?option=arrivals">
            
            <h7>
              <label for="guest" class="flight-modal-body">Guest Name:</label>
              <input type="text" name="guest">
            </h7><br>
            <h7>
              <label for="airline" class="flight-modal-body">Airline:</label>
              <input type="text" name="airline">
            </h7><br>
            <h7>
              <label for="departureCity" class="flight-modal-body">Departing From:</label>
              <input type="text" name="departureCity">
            </h7><br>
            <h7>
              <label for="departureDate" class="flight-modal-body">Departure Date:</label>
              <input type="text" name="departureDate">
            </h7><br>
            <h7>
              <label for="departureTime" class="flight-modal-body">Departure Time:</label>
              <input type="text" name="departureTime">
            </h7><br>
            <h7>
              <label for="arrivalCity" class="flight-modal-body">Arriving To:</label>
              <input type="text" name="arrivalCity">
            </h7><br>
            <h7>
            <label for="arrivalDate" class="flight-modal-body">Arrival Date:</label>
              <input type="text" name="arrivalDate">
            </h7><br>
            <h7>
              <label for="arrivalTime" class="flight-modal-body">Arrival Time:</label>
              <input type="text" name="arrivalTime">
            </h7><br>
            <h7> 
              <label for="category" class="flight-modal-body">Category:</label>
                <span class="input">
                  <select name="category">
                    <% flightCategory.forEach((category) => { %>
                      <option><%= category %></option>
                    <%})%>
                  </select>
                </span>
            </h7>
        
        
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <input type="submit" class="btn btn-primary" value="Add">
        </div>
      </form>
    </div>
    
  </div>
</div>
</div>
<script>
$('#createArrivingFlightModal').on('show.bs.modal', function (event) {
  var button = $(event.relatedTarget)
  var modal = $(this)
  modal.find('.modal-title').text('Add Arrival Flight')
})
</script>




  <!-- flight modal end -->