<!-- departing flight modal start -->

<div class="modal fade" id="createDepartingFlightModal" tabindex="-1" role="dialog" aria-labelledby="createDepartingFlightModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document" id="flight-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createDepartingFlightModalLabel">Save A Flight</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
      </div>
        
      <div class="modal-body">
        <form method="POST" action="/tripdetail/<%= oneTrip._id %>?option=departures">
          <h7 class="flight-modal-body"> 
            <label for="guest">Guest Name:</label>
            <input type="text" name="guest">
          </h7><br>
          <h7 class="flight-modal-body"> 
            <label for="airline">Airline:</label>
            <input type="text" name="airline">
          </h7><br>
          <h7 class="flight-modal-body"> 
            <label for="departureCity">Departing From:</label>
            <input type="text" name="departureCity">
          </h7><br>
          <h7 class="flight-modal-body"> 
            <label for="departureDate">Departure Date:</label>
            <input type="text" name="departureDate">
          </h7><br>
          <h7 class="flight-modal-body">   
            <label for="departureTime">Departure Time:</label>
            <input type="text" name="departureTime">
          </h7><br>
          <h7 class="flight-modal-body"> 
            <label for="arrivalCity">Arriving To:</label>
            <input type="text" name="arrivalCity">
          </h7><br>
          <h7 class="flight-modal-body"> 
            <label for="arrivalDate">Arrival Date:</label>
            <input type="text" name="arrivalDate">
          </h7><br>
          <h7 class="flight-modal-body">
            <label for="arrivalTime">Arrival Time:</label>
            <input type="text" name="arrivalTime">
          </h7><br>
          <h7 class="flight-modal-body"> 
            <label for="category">Category:</label>
              <span class="input">
                <select name="category">
                  <% flightCategory.forEach((category) => { %>
                    <option><%= category %></option>
                  <%})%>
                </select>
              </span>
          </h7>
        
        
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-primary" value="Add">
          </div>
        </form>
      </div>
    
    </div>
  </div>
</div>
<script>
$('#createDepartingFlightModal').on('show.bs.modal', function (event) {
var button = $(event.relatedTarget)
var modal = $(this)
modal.find('.modal-title').text('Add Departing Flight')
})
</script>




    <!-- flight modal end -->