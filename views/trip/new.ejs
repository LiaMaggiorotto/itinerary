<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Insert Trip Title</title>

  <%- include('../partials/style') %>

</head>

  <body>
    
    <div class="layout layout-nav-side">

      
      <!-- Nav Bar -->

      <%- include('../partials/navbars/nav2') %>
     
      <!-- Main Section -->

      <div class="main-container">
        <div class="container" id="show-page-header"> 
          <div class="row justify-content-center">
            <div class="col-lg-11 col-xl-9">
              <section class="py-4 py-g-5">

                <h2 class="new-trip-header">Add A New Adventure</h2>
                <form action ="/trips" method="POST">
                  <div class="editLabel">
                    <label for="title">Title:</label>
                  </div>
                  <div>
                    <input type="text" name="title" />
                  </div>

                  <div class="editLabel">
                    <label for="destination">Destination:</label>
                  </div>
                  <div>
                    <input type="text" name="destination" />
                  </div>
                  
                  <div class="editLabel">
                    <label for="imageLink">Image:</label>
                  </div>
                  <div>
                    <input type="text" name="imageLink" />
                  </div>

                  <div class="editLabel">
                    <label for="startDate">Trip Start Date::</label>
                  </div>
                  <div>
                    <input type="text" name="startDate" placeholder="MM/DD/YYYY" pattern="[0-9]{2}/[0-9]{2}/[0-9]{4}"/>
                  </div>

                  <div class="editLabel">
                    <label for="endDate">Trip End Date::</label>
                  </div>
                  <div>
                    <input type="text" name="endDate" placeholder="MM/DD/YYYY" pattern="[0-9]{2}/[0-9]{2}/[0-9]{4}" />
                  </div>

                  <div class="editLabel">
                    <label for="details">Give us some details:</label>
                  </div>
                  <div>
                    <input type="text" name="details" />
                  </div>
 
                  <div class="editButtons">
                    <input type="reset" class="btn btn-secondary">
                    <input type="submit" class="btn btn-primary" value="Add New Trip" />
                  </div>
                </form>


              </section>
            </div>
          </div> 
        </div> 
      </div>
    </div>
  </body>
</main>
</html> 